<h1>Classic Burgers</h1>

<img src="https://media2.giphy.com/media/mxinMZLxNWbPq/giphy.gif" alt="Burger Pic">

<div class="row">

  <div class="col-sm-6">
    <div class="panel panel-default">
      <h2>Orders</h2>
      <div class="panel-body">

        <ol>
          {{#each burgers}}
          {{#unless devoured}}

          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ol>
        <br>

      </div>
    </div>
  </div>


  <div class="col-sm-6">
    <div class="panel panel-default">
      <h2>Devoured!</h2>
      <div class="panel-body">
        <ol>
          {{#each burgers}}
          {{#if devoured}}

          {{this.burger_name}}
          <br>

          {{/if}}
          {{/each}}
        </ol>
        <br>
      </div>
    </div>
  </div>
</div>
